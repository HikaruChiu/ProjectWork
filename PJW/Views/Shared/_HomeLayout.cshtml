@using Configuration;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>專案與工作任務系統</title>
    <link href="~/favicon.ico" asp-append-version="true" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @*<link href="~/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet">
        <link href="~/css/font-awesome.min.css" asp-append-version="true" rel="stylesheet">*@
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet">
    <link href="~/css/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true" rel="stylesheet">
    <link href="~/css/animate.css" asp-append-version="true" rel="stylesheet">
    <link href="~/css/style.css" asp-append-version="true" rel="stylesheet">

</head>

<body class="fixed-sidebar full-height-layout gray-bg" style="overflow: hidden">
    <input type="hidden" id="eid" value="@ViewBag.Code" />
    <input type="hidden" id="userName" value="@ViewBag.UserName" />
    <div id="wrapper">
        <!--左側導航開始-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs" style="text-align: center"><strong class="font-bold" style="font-size: 20px;">專案與工作任務<br />管理系統</strong></span>
                                </span>
                            </a>

                        </div>
                    </li>
                    <li>
                        <div class="logo-element">
                            PJW
                        </div>
                    </li>

                    <li>
                        <a class="J_menuItem" href="~/Home/DashBord" data-id="Home/DashBord"><i class="fa fa-home"></i> <span class="nav-label">首頁</span></a>
                    </li>
                    @await Component.InvokeAsync("MenuHeader")
                </ul>
            </div>
        </nav>
        <!--左側導航結束-->
        <!--右側部分開始-->
        <div id="page-wrapper" class="gray-bg dashbard-1 page-wrapper">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                        <!--[if lte IE 7]>
                            <form role="search" class="navbar-form-custom" style="width: 420px !important;">
                                <div class="form-group">
                                    <input type="text" placeholder="您還在使用老掉牙的IE，爲了正常使用系統請更換為谷歌瀏覽器" class="form-control" name="top-search" id="top-search">
                                </div>
                            </form>
                        <![endif]-->
                    </div>
                    <ul class="nav navbar-top-links navbar-right">

                        <li class="hidden-xs">
                            <a href="https://intranet.funday.asia" target="_blank" data-index="0"><i class="fa fa-beer"></i>FUNDAY 員工管理系統</a>
                        </li>
                        <li class="dropdown hidden-xs">
                            @if (GlobalSetting.SuperList.Contains(ViewBag.Eid))
                            {
                                <a class="J_menuItem right-sidebar-toggle" data-toggle="dropdown" aria-expanded="false" href="~/Admin/Account/UserDetail">
                                    <i class="glyphicon glyphicon-user"></i> <font id="Eid">@ViewBag.Eid<font style="font-size: 5px;">(@ViewBag.UserName)</font></font>@*<b class="caret"></b>*@
                                </a>
                            }
                            else
                            {
                                <span style="margin: 0px 20px 0px 0px ">
                                    <i class="glyphicon glyphicon-user"></i>
                                    <font id="Eid">@ViewBag.Eid<font style="font-size: 5px;">(@ViewBag.UserName)</font></font>@*<b class="caret"></b>*@
                                </span>
                                
                            }


                        </li>
                    </ul>
                </nav>
            </div>
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="Home/DashBord"><i class="fa fa-refresh"></i> 首頁</a>
                    </div>
                </nav>

                <img id="fullscreen_on" class="roll-nav roll-right J_tabRight" style="right: 180px;margin-top: 8px;margin-right: 1.5px; width: 25px;height: 25px" src="~/image/fullscreen_alt.png" alt="全屏" />
                <img id="fullscreen_exit" class="roll-nav roll-right J_tabRight" style="right: 180px;margin-top: 8px;margin-right: 1.5px; width: 25px; height: 25px;display: none" src="~/image/fullscreen_exit.png" alt="退出全屏" />
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>

                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        關閉操作<span class="caret"></span>
                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        @*<li class="J_tabShowActive">
                                <a>定位目前選項卡</a>
                            </li>*@
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>關閉全部標籤</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>關閉其他標籤</a>
                        </li>
                    </ul>
                </div>
                <a href="~/Admin/Account/Logout" class="roll-nav roll-right J_tabExit"><i class="fa fa fa-sign-out"></i> 登出</a>
            </div>
            <div class="row J_mainContent" id="content-main">
                <iframe class="J_iframe" name="iframe0" width="100%" height="100%" src="~/Home/DashBord" frameborder="0" data-id="Home/DashBord" seamless></iframe>
            </div>
            <div class="footer">
                <div class="pull-right">
                    &copy; 2021
                    <a href="https://funday.asia" target="_blank">FUNDAY</a>
                </div>
            </div>
        </div>
        <!--右側部分結束-->
        @RenderBody()
    </div>

    <!-- 全域性js -->
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.serializeObject.js" asp-append-version="true"></script>
    @*<script src="~/js/bootstrap.min.js" asp-append-version="true"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js" asp-append-version="true"></script>
    <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/layer/layer.min.js" asp-append-version="true"></script>

    <!-- 自定義js -->
    <script src="~/js/hplus.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/contabs.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/3.18.2/minified.min.js"></script>

</body>

</html>